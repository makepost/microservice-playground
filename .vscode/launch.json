{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Post Service",
      "program": "${workspaceRoot}/bin/postService.js",
      "protocol": "inspector" // ES6 proxy support.
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Post Broadcast 3002",
      "program": "${workspaceRoot}/bin/postBroadcast.js",
      "env": {
        "PORT": "3002"
      },
      "protocol": "inspector" // ES6 proxy support.
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Post Broadcast 3003",
      "program": "${workspaceRoot}/bin/postBroadcast.js",
      "env": {
        "PORT": "3003"
      },
      "protocol": "inspector" // ES6 proxy support.
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Static Server 3001",
      "program": "${workspaceRoot}/bin/staticServer.js",
      "env":{
        "PORT": "3001"
      },
      "protocol": "inspector" // ES6 proxy support.
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--bail",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/out/**/*.test.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
