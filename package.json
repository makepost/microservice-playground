{
  "name": "nyan-cote",
  "version": "2.0.0",
  "description": "Zero-configuration TypeScript microservices without boilerplate.",
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "scripts": {
    "build": "tsc -p src",
    "coverage": "nyc -a --eager -n 'out/**/*.js' -n 'src/**/*.ts' -r json -r html yarn test",
    "lint": "tslint 'src/**/*.ts'",
    "lint-fix": "yarn lint -- --fix",
    "test": "mocha --bail -u tdd --timeout 999999 --colors 'out/**/*.test.js'",
    "update-readme": "node out/utils/updateReadme.js",
    "prepublishOnly": "npm run build"
  },
  "pre-commit": [
    "lint"
  ],
  "author": "makepost <makepost@firemail.cc>",
  "license": "MIT",
  "dependencies": {
    "@types/cote": "^0.14.1",
    "cote": "^0.14.1",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "expect": "^1.20.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2",
    "pre-commit": "^1.2.2",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  }
}
