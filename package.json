{
  "name": "nyan-cote",
  "version": "2.1.0",
  "description": "Zero-configuration TypeScript microservices without boilerplate.",
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc -a --eager -n 'out/**/*.js' -n 'src/**/*.ts' -r json -r html yarn test",
    "format": "tslint --fix 'src/**/*.ts'",
    "test": "mocha --bail -u tdd --timeout 999999 --colors 'out/**/*.test.js'",
    "readme": "node out/updateReadme.js",
    "prepublishOnly": "npm run build"
  },
  "author": "makepost <makepost@firemail.cc>",
  "license": "MIT",
  "dependencies": {
    "@types/cote": "^0.14.2",
    "cote": "^0.15.1",
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/fs-extra": "^4.0.2",
    "@types/socket.io": "^1.4.30",
    "expect": "^21.2.1",
    "express": "^4.16.1",
    "fs-extra": "^4.0.2",
    "mocha": "^4.0.0",
    "nyc": "^11.2.1",
    "socket.io": "^2.0.3",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  }
}
